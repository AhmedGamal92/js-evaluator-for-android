<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evgenii.jsevaluatortests"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.evgenii.jsevaluatortests" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.evgenii.jsevaluatortests.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.evgenii.jsevaluatortests.EvaluateJsStringActivity"
            android:label="@string/title_activity_evaluate_js_string" >
            android:parentActivityName="com.evgenii.jsevaluatortests.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.evgenii.jsevaluatortests.MainActivity" />
        </activity>
        <activity
            android:name="com.evgenii.jsevaluatortests.CallJsFunctionActivity"
            android:label="@string/title_activity_call_js_function" >
	        android:parentActivityName="com.evgenii.jsevaluatortests.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.evgenii.jsevaluatortests.MainActivity" />
        </activity>
        <activity
            android:name="com.evgenii.jsevaluatortests.StressTestActivity"
            android:label="@string/title_activity_stress_test" >
            android:parentActivityName="com.evgenii.jsevaluatortests.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.evgenii.jsevaluatortests.MainActivity" />
        </activity>
    </application>

</manifest>
